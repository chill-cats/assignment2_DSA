{
    "configurations": {
        "Debug main": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/cmake-build/src/main",
                "args": [
                    "${workspaceRoot}/testcase/testN4.txt"
                ],
                "cwd": "${workspaceRoot}",
                "externalConsole": false,
                "stopAtEntry": true,
                "MIMode": "lldb",
                "logging": {
                    "engineLogging": false
                }
            }
        },
        "Debug main LLDB": {
            "adapter": "CodeLLDB",
            "breakpoints": {
                "exception": {
                    "cpp_throw": "Y",
                    "cpp_catch": "N"
                }
            },
            "configuration": {
                "type": "lldb",
                "request": "launch",
                "program":"${workspaceRoot}/cmake-build/src/main",
                "args": [
                    "${workspaceRoot}/testcase/testN5.txt"
                ],
                "cwd":"${workspaceRoot}",
                "externalConsole": false,
                "stopAtEntry": true,
                "MIMode":"lldb"
            }
        }
    }
}
